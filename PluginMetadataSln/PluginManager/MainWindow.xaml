<Window x:Class="PluginManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Plug-in Manager" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <WrapPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch" x:Name="HeaderPanel" Grid.Row="1"/>
        <WrapPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch" x:Name="FooterPanel" Grid.Row="2"/>
    </Grid>
</Window>
