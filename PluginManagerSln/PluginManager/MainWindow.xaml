<Window x:Class="PluginManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Plug-in Manager" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Content="Check for Plugins" Margin="5" HorizontalAlignment="Right" VerticalAlignment="Top" Click="_ButtonClick"/>
        <WrapPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch" x:Name="Panel" Grid.Row="1"/>
    </Grid>
</Window>
